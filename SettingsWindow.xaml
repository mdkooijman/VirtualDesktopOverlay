<Window x:Class="VirtualDesktopOverlay.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - Virtual Desktop Overlay"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Overlay Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Theme Selection -->
                <TextBlock Text="Theme:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="ThemeComboBox" Margin="0,0,0,15">
                    <ComboBoxItem Content="Dark"/>
                    <ComboBoxItem Content="Light"/>
                </ComboBox>

                <!-- Opacity -->
                <TextBlock Text="Background Opacity:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Slider x:Name="OpacitySlider" Minimum="20" Maximum="100" Value="80" 
                        TickFrequency="10" IsSnapToTickEnabled="True" Margin="0,0,0,15"/>

                <!-- Font Size -->
                <TextBlock Text="Font Size:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Slider x:Name="FontSizeSlider" Minimum="12" Maximum="32" Value="18" 
                        TickFrequency="2" IsSnapToTickEnabled="True" Margin="0,0,0,15"/>

                <!-- Acrylic Effect -->
                <CheckBox x:Name="AcrylicCheckBox" Content="Enable Acrylic Blur (experimental)" 
                          Margin="0,0,0,15"/>

                <!-- Startup -->
                <CheckBox x:Name="StartupCheckBox" Content="Run at Windows startup" 
                          Margin="0,0,0,15"/>

                <!-- Position Reset -->
                <TextBlock Text="Position:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Button x:Name="ResetPositionButton" Content="Reset to Default Position" 
                        Click="ResetPositionButton_Click" Padding="10,5"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Click="SaveButton_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>